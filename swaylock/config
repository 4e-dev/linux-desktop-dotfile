# show the circular unlock indicator in the center
indicator-radius = 100
indicator-thickness = 7

# SHOW A SMALL RING ANIMATION WHEN VERIFYING PASSWORD
show-failed-attempts = true
blur: 5                             # optional, blur background (Wayland compositor support)

